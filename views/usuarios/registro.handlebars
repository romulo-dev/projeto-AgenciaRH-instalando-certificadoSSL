{{#each errors}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Account Register</h3>
            <form action="/usuarios/registro" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="nome" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="senha" value="{{password}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Repeat Password</label>
                    <input type="password" class="form-control" name="senha2" required>
                </div>
                <button class="btn btn-primary" type="submit">Criar conta</button>
            </form>
        </div>
    </div>
</div>